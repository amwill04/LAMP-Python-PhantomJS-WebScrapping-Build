{
  "variables": {
      "atlas_token": "{{env `ATLAS_TOKEN`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo sh '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/puppet.sh"
        ]
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "./puppet/manifests/site.pp",
      "module_paths": "./puppet/modules/",
      "prevent_sudo": false
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' |sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
          "<esc><wait>",
          "/linux initrd=/initrd.gz",
          " nofb",
          " fb=false",
          " auto=true",
          " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
          " hostname=vagrant",
          " DEBCONF_DEBUG=5",
          " --",
          " nofb",
          "<enter>"
        ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "7297321c2fa6424417a548c85edd6e98",
      "iso_checksum_type": "md5",
      "iso_url": "http://archive.ubuntu.com/ubuntu/dists/trusty/main/installer-amd64/current/images/netboot/mini.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "60m",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "4096" ]
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "amwill04/LAMP-PP64",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "0.0.6"
        }
      }
    ]
  ]
}
